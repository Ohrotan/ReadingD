<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MemoRegisterActivity">

    <LinearLayout
        android:id="@+id/top_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addphoto_bt"
            app:srcCompat="@drawable/addphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"/>

        <TextView
            android:id="@+id/memo_book_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="책 제목1"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/top_tab_layout"
        android:orientation="horizontal"
        android:id="@+id/seekbar_layout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:textSize = "15sp"
            android:gravity="center"
            android:text = "page"/>

        <SeekBar
            android:id="@+id/page_seekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="top"
            android:paddingLeft="500dp"
            android:max="300"
            ></SeekBar>

        <TextView
            android:id = "@+id/cur_page_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "0"
            android:layout_marginRight="30dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_shape_gray"
        android:layout_below="@id/seekbar_layout"
        android:layout_above="@id/bottom_tab_layout"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        >

        <ImageSwitcher
            android:layout_alignParentTop="true"
            android:id="@+id/fimage_switcher"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffffff">
        </ImageSwitcher>

        <ImageButton
            android:id="@+id/next_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_alignRight="@id/fimage_switcher"
            android:layout_alignBottom="@id/fimage_switcher"
            android:src="@drawable/nextbtn"
        ></ImageButton>

        <ImageButton
            android:id="@+id/prev_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_alignLeft="@id/fimage_switcher"
            android:layout_alignBottom="@id/fimage_switcher"
            android:src="@drawable/prevbtn"
            ></ImageButton>

        <ImageButton
            android:id="@+id/imagedelete_btn"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_alignRight="@id/fimage_switcher"
            android:layout_alignTop="@id/fimage_switcher"
            android:src="@drawable/imagedeletebtn"
            ></ImageButton>



        <EditText
            android:layout_alignParentBottom="true"
            android:layout_below="@id/fimage_switcher"
            android:id="@+id/memo_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars  = "vertical"
            ></EditText>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/cancel_save_layout"
        android:layout_marginLeft="130dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="담벼락에 올리기"
            android:textSize="16sp"></TextView>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:id="@+id/cancel_save_layout"
        android:layout_above="@+id/bottom_tab_layout">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_cancel"
            android:text="취소"
            android:textSize="16sp"
            android:onClick="onClick"/>

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/button_save"
            android:text="저장"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:onClick="onClick"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/bottom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/white"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tab_flash_back"
            app:srcCompat="@drawable/flash_back_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:tag="cur" />

        <ImageView
            android:id="@+id/tab_memo"
            app:srcCompat="@drawable/memo_c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />


        <ImageView
            android:id="@+id/tab_book"
            app:srcCompat="@drawable/book_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />


        <ImageView
            android:id="@+id/tab_share"
            app:srcCompat="@drawable/share_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />


        <ImageView
            android:id="@+id/tab_setting"
            app:srcCompat="@drawable/setting_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickTab"
            android:paddingTop="15dp"
            android:paddingBottom="15dp" />
    </LinearLayout>
</RelativeLayout>